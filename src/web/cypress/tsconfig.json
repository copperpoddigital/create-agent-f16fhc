{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node", "@testing-library/cypress"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "../",
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "../cypress.config.ts"],
  "exclude": ["node_modules"]
}